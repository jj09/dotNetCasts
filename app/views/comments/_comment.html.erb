<b><%= comment.user.name %></b><br />
<small><%= comment.created_at %></small>
<p>
	<%= comment.content %>
</p>
<% if current_user?(comment.user) || admin? %>
	<%= link_to 'Edit', edit_comment_path(comment) %> |
	<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>