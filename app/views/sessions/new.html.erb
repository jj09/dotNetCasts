<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
	<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<br />

		<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>

	<% end %>

		<p>
			New user? <%= link_to "Sign up now!", signup_path %>
		</p>

		<p>
			<%= link_to image_tag("facebook-login-button.png", alt: "Sign in with facebook"), "/auth/facebook", id: "sign_in" %>
		</p>
	</div>
</div>