<%= form_for(@vodcast, validate: true) do |f| %>
  <% if @vodcast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vodcast.errors.count, "error") %> prohibited this vodcast from being saved:</h2>

      <ul>
      <% @vodcast.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>

  <div class="field">
    <% #f.input :tags, :label => "Tags", :as => :check_boxes, :collection => Tag.all %>
    <% Tag.all.each do |tag| %>
      <%= check_box_tag 'vodcast[tag_ids][]', tag.id, @vodcast.tags.include?(tag) %>
      <%= label_tag :tag, tag.name %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
